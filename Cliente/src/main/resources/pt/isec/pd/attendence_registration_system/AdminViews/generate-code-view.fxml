<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pt.isec.pd.attendence_registration_system.Controllers.AdminController"
      fx:id="box">

    <Label fx:id="infoLabel"/>
    <Label text="Gerar código para Registo de Presenças" id="title"/>

    <Label text="Nome do evento"/>
    <TextField fx:id="eventName" promptText="Nome do Evento" styleClass="textFields"/>

    <Label text="Tempo de Validade (minutos)"/>
    <TextField fx:id="codeTime" promptText="Tempo de Validade" styleClass="textFields"/>

    <Button text="Gerar Código" onAction="#generateEventCode" id="btnConfirm" styleClass="buttons"/>
    <Button text="Voltar" onAction="#retButton" styleClass="buttons" fx:id="backBtn"/>

    <stylesheets>
        <URL value="@css/admin-views.css" />
    </stylesheets>
</VBox>


